<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
      <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    </PropertyGroup>

    <ItemGroup>
      <!-- Modern Pidgin versions don't support NS2.0 -->
      <PackageVersion Remove="Pidgin" />
      <PackageVersion Include="Pidgin" Version="2.5.0" />
      <!-- Without this Rider starts displaying all the PackageVersions in the solution view. Why? -->
      <PackageVersion Update="*" Visible="false" />

      <PackageReference Include="Microsoft.Build.Framework" />
      <PackageReference Include="Mono.Cecil" />
      <PackageReference Include="Pidgin" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\XamlX\src\XamlX.IL.Cecil\XamlX.IL.Cecil.csproj" />
    </ItemGroup>
</Project>
